version: '3.4'

services:
  node:
    image: reactstarter
    container_name: node
    depends_on:
      - mongodb
    build: .
    environment:
      NODE_ENV: development
      CHOKIDAR_USEPOLLING: "true"
    ports:
      - 3000:3000
    volumes: 
      - .:/usr/src/app
    stdin_open: true  
    networks:
      - mongo

  mongodb:
    image: mongo:latest
    container_name: mongodb
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: rootpassword 
      MONGO_USER: "apiUser"
      MONGO_PASS: "apiPass"
      MONGO_DATABASE: api

    ports:
      - 27017:27017
    volumes:
      - mongodb_data_container:/data/db
    networks:
      - mongo
  mongo-express:
    image: mongo-express
    container_name: mongo-express
    restart: always
    depends_on:
      - mongodb
    ports:
      - 8081:8081
    environment:
      ME_CONFIG_MONGODB_SERVER: mongodb
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
      ME_CONFIG_MONGODB_ADMINPASSWORD: rootpassword
    networks:
      - mongo

volumes:
  mongodb_data_container:

networks:
  mongo:
    name: mongo